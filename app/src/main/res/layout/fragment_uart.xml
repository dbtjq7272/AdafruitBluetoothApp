<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.UartModeFragment"
    android:id="@+id/fragment_place">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:visibility="gone"/>


    </com.google.android.material.appbar.AppBarLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add_white_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/searchEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/working_search"
            android:textSize="21sp"/>


        <ScrollView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:id="@+id/work1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background">

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/work1_name"
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:text="@string/working_name"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/work1_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/working_state_waiting"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/work1_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work1_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work1_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work1_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work1_content5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work1_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:text="10"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work1_protocol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="1"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:id="@+id/work2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background">

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/work2_name"
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:text="@string/working_name"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/work2_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/working_state_waiting"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/work2_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work2_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work2_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work2_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work2_content5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work2_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:text="10"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work2_protocol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="2"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:id="@+id/work3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background">

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/work3_name"
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:text="@string/working_name"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/work3_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/working_state_waiting"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/work3_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work3_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work3_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work3_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work3_content5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work3_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:text="10"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work3_protocol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="3"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:id="@+id/work4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_background">

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/work4_name"
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:text="@string/working_name"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/work4_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/working_state_waiting"
                                android:textSize="30sp"
                                android:textStyle="bold"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/work4_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work4_content2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work4_content3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work4_content4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/work4_content5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/working_content"
                            android:textSize="20sp"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work4_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:text="10"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/work4_protocol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="4"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sendTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:singleLine="false" />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uart_send_action" />

                <Spinner
                    android:id="@+id/sendPeripheralSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sentBytesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uart_sentbytes_format"
                    android:textColor="@color/infotext" />

                <TextView
                    android:id="@+id/receivedBytesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/uart_receivedbytes_format"
                    android:textColor="@color/infotext" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bufferRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/bufferTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:gravity="top"
                android:scrollbarFadeDuration="0"
                android:textColorHighlight="#ffffff" />
        </LinearLayout>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

