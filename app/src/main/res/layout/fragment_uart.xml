<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".app.UartModeFragment"
    android:orientation="vertical">
    <EditText
        android:textSize="25sp"
        android:id="@+id/work_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="검색"
        android:background="@color/white"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/work1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/work1_name"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/working_name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/work1_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_state_waiting"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/work1_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work1_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work1_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work1_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work1_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/work1_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_time"
                    android:textSize="15sp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/work1_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_protocol"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/work2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/work2_name"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/working_name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/work2_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_state_waiting"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/work2_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work2_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work2_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work2_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work2_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/work2_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_time"
                    android:textSize="15sp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/work2_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_protocol"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/work3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/work3_name"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/working_name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/work3_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_state_waiting"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/work3_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work3_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work3_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work3_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work3_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/work3_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_time"
                    android:textSize="15sp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/work3_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_protocol"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/work4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/work4_name"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:hint="@string/working_name"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/work4_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_state_waiting"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/work4_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work4_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work4_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work4_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/work4_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_content"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/work4_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_time"
                    android:textSize="15sp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/work4_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/working_protocol"
                    android:textSize="15sp"/>

            </LinearLayout>







        </LinearLayout>



    </ScrollView>
    <LinearLayout
        android:id="@+id/sendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sendEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:singleLine="false" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uart_send_action" />

            <Spinner
                android:id="@+id/sendPeripheralSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sentBytesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uart_sentbytes_format"
                android:textColor="@color/infotext" />

            <TextView
                android:id="@+id/receivedBytesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/uart_receivedbytes_format"
                android:textColor="@color/infotext" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bufferRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/bufferTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:gravity="top"
            android:scrollbarFadeDuration="0"
            android:textColorHighlight="#ffffff" />
    </LinearLayout>

</LinearLayout>
